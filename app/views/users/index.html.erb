<div class="container mt-5">
  <h1 class="mb-4 text-center">Usuarios</h1>

  <%= link_to "Crear Usuario", new_user_path, class: "btn btn-success mb-3" %>

  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= user.first_name %> <%= user.last_name %></strong> - <%= user.email %>
          <br><small>Mensajes enviados: <%= user.sent_messages.count %></small>
        </div>
        <div>
          <%= link_to "Ver", user_path(user), class: "btn btn-sm btn-primary" %>
          <%= link_to "Editar", edit_user_path(user), class: "btn btn-sm btn-warning" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
