<div class="container mt-5">
  <h1 class="text-center mb-4">Mensajes</h1>

  <div class="list-group">
    <% @messages.each do |message| %>
      <%= link_to message_path(message), class: "list-group-item list-group-item-action" do %>
        <p class="mb-0">
          <strong>Message ID:</strong> <%= message.id %>
        </p>
      <% end %>
    <% end %>
  </div>
  <h1>Messages</h1>
<%= link_to 'Add New Message', new_message_path %>
<ul>
  <% @messages.each do |msg| %>
    <li><strong><%= msg.user.first_name %></strong>: <%= msg.body %> (Chat #<%= msg.chat_id %>)</li>
  <% end %>
</ul>

</div>
